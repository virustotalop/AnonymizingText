{

  "manifest_version": 2,
  "name": "Anonymize Text",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "activeTab",
	"menus"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.localhost/*"],
      "js": ["anonymize-text.js"]
    }
  ]
}