{

  "manifest_version": 2,
  "name": "Anonymize Text",
  "version": "1.0",

  "description": "Anonymize text.",

  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "activeTab",
	"menus"
  ],
  "background": {
    "scripts": ["thesaurus.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "js": ["anonymize-text.js"]
    }
  ]
}